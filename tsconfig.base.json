{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",

		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,

		"baseUrl": ".",
		"paths": {
			"@frosttroll/projecttoolmodels": ["common/projecttoolmodels/src/index.ts"],
            "@frosttroll/projecttooldata": ["common/projecttooldata/src/index.ts"],
            "@frosttroll/projecttoolutils": ["common/projecttoolutils/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "dist", "build", "**/*.test.ts", "**/*.spec.ts"]
}
